{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:recommended",
		":prHourlyLimit4",
		":rebaseStalePrs",
		":renovatePrefix",
		":semanticCommits",
		":timezone(Australia/Melbourne)",
		":updateNotScheduled",
		":dependencyDashboard",
		"group:allNonMajor"
	],
	"constraints": {
		"node": "22"
	},
	"automerge": true,
	"commitMessageAction": "",
	"labels": ["dependencies"],
	"prConcurrentLimit": 5,
	"prNotPendingHours": 1,
	"schedule": ["at any time"],
	"semanticCommitScope": "",
	"semanticCommitType": "deps",
	"packageRules": [
		{
			"matchPackageNames": ["vite"],
			"allowedVersions": "< 7.0.0"
		},
		{
			"matchDatasources": ["node-version"],
			"allowedVersions": "22.x"
		}
	]
}
